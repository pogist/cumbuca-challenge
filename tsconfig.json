{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@hooks": [
        "hooks/index"
      ],
      "@state/*": [
        "state/*"
      ],
      "@storage/*": [
        "storage/*"
      ],
      "@theming": [
        "theming/index"
      ],
      "@types": [
        "types/index"
      ],
      "@util": [
        "util/index"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
